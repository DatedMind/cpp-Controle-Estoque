#include <iostream>
#include <limits>
#include <iostream>
#include <windows.h>
#include <cstdlib>

using namespace std;

class CadastroOperador {
private:
    struct Operador {
        double usuarioID;
        double senha;
    };
    
    
    static const int totalOperadores = 1;
    Operador operadores[totalOperadores];
    
public:
  
    CadastroOperador() {
        operadores[0].usuarioID = 135791113;
        operadores[0].senha = 777;
    }

    
    bool autenticarOperador() {
        double usuario, senha;
        
        cout << "=== LOGIN ===" << endl;
        cout << "Usuario (ID): ";
        while(!(cin >> usuario)) {
            cout << "Por favor, insira um numero valido: ";
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
        }
        
        cout << "Senha numerica: ";
        while(!(cin >> senha)) {
            cout << "Por favor, insira um numero valido: ";
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
        }
        
        for (int i = 0; i < totalOperadores; ++i) {
            if (operadores[i].usuarioID == usuario && operadores[i].senha == senha) {
                cout << "Login bem-sucedido!" << endl << endl;
                return true;
            }
        }
        
        cout << "Usuario ou senha incorretos!" << endl << endl;
        return false;
    }
};

